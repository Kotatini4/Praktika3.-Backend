{
  "swagger": "2.0",
  "info": {
    "title": "Library API Documentation",
    "description": "Документация для системы книг, авторов и комментариев",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Authors",
      "description": "Управление авторами"
    },
    {
      "name": "Books",
      "description": "Управление книгами"
    },
    {
      "name": "Categories",
      "description": "Категории книг"
    },
    {
      "name": "Comments",
      "description": "Комментарии к книгам"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/authors": {
      "post": {
        "tags": [
          "Authors"
        ],
        "description": "Создать нового автора",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "first_name": {
                  "type": "string",
                  "example": "Иван"
                },
                "last_name": {
                  "type": "string",
                  "example": "Петров"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Автор успешно создан"
          },
          "400": {
            "description": "Неверные данные"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Authors"
        ],
        "description": "Получить всех авторов",
        "responses": {
          "200": {
            "description": "Список авторов"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/authors/{id}": {
      "put": {
        "tags": [
          "Authors"
        ],
        "description": "Обновить автора по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "first_name": {
                  "type": "string",
                  "example": "Иван"
                },
                "last_name": {
                  "type": "string",
                  "example": "Петров"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Автор обновлён"
          },
          "404": {
            "description": "Автор не найден"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/books": {
      "get": {
        "tags": [
          "Books"
        ],
        "description": "Получить список книг",
        "responses": {
          "200": {
            "description": "Список книг"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Books"
        ],
        "description": "Создать книгу",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "book_title": {
                  "type": "string",
                  "example": "Название книги"
                },
                "book_description": {
                  "type": "string",
                  "example": "Описание книги"
                },
                "publication_year": {
                  "type": "number",
                  "example": 2024
                },
                "category_id": {
                  "type": "number",
                  "example": 1
                },
                "author_ids": {
                  "type": "array",
                  "example": [
                    1,
                    2
                  ],
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Книга создана"
          },
          "400": {
            "description": "Ошибка ввода"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "tags": [
          "Books"
        ],
        "description": "Получить книгу по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Книга найдена"
          },
          "404": {
            "description": "Книга не найдена"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Books"
        ],
        "description": "Обновить книгу по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "book_title": {
                  "type": "string",
                  "example": "Новое название"
                },
                "book_description": {
                  "type": "string",
                  "example": "Новое описание"
                },
                "publication_year": {
                  "type": "number",
                  "example": 2025
                },
                "category_id": {
                  "type": "number",
                  "example": 2
                },
                "author_ids": {
                  "type": "array",
                  "example": [
                    3
                  ],
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Книга обновлена"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Книга не найдена"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Books"
        ],
        "description": "Удалить книгу",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Книга удалена"
          },
          "404": {
            "description": "Книга не найдена"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/categories": {
      "post": {
        "tags": [
          "Categories"
        ],
        "description": "Создать категорию",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Фантастика"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Категория создана"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Категория уже существует"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Categories"
        ],
        "description": "Получить все категории",
        "responses": {
          "200": {
            "description": "Список категорий"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/categories/{id}": {
      "get": {
        "tags": [
          "Categories"
        ],
        "description": "Получить категорию по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Категория найдена"
          },
          "404": {
            "description": "Не найдено"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Categories"
        ],
        "description": "Обновить категорию",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Научная литература"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Категория обновлена"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Categories"
        ],
        "description": "Удалить категорию",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "Успешное удаление"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/books/{bookId}/comments": {
      "post": {
        "tags": [
          "Comments"
        ],
        "description": "Создать комментарий к книге",
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "type": "number",
                  "example": 1
                },
                "body": {
                  "type": "string",
                  "example": "Комментарий к книге"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Комментарий создан"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "get": {
        "tags": [
          "Comments"
        ],
        "description": "Получить все комментарии к книге",
        "parameters": [
          {
            "name": "bookId",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Список комментариев"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/comments/{id}": {
      "get": {
        "tags": [
          "Comments"
        ],
        "description": "Получить комментарий по ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Комментарий найден"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "put": {
        "tags": [
          "Comments"
        ],
        "description": "Обновить комментарий",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "body": {
                  "type": "string",
                  "example": "Обновлённый текст"
                },
                "userId": {
                  "type": "number",
                  "example": 1
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Комментарий обновлен"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      },
      "delete": {
        "tags": [
          "Comments"
        ],
        "description": "Удалить комментарий",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "Комментарий удален"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  }
}